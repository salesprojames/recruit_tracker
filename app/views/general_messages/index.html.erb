<h2>General Messages</h2>


<section class="card">
				<div class="card-block">
					<table id="example" class="display table table-striped table-bordered" cellspacing="0" width="100%">
						<thead>
						<tr>
							<th>Body</th>
							<th>Number</th>
							<th>Actions</th>
						</tr>
						</thead>
						<tfoot>
						<tr>
							<th>Body</th>
							<th>Number</th>
							<th>Actions</th>
						</tr>
						</tfoot>
						<tbody>
						<% @general_messages.each do |general_message| %>
							<tr>
								<td><%= general_message.body %></td>
								<td><%= general_message.number %></td>
								<td><%= link_to "Make New Recruit", new_recruit_path(:phone_number => general_message.number) %></td>
							</tr>
						<% end -%>
						
						</tbody>
					</table>
				</div>
			</section>

	
	<script>
		$(function() {
			$('#example').DataTable();
		});
	</script>

<script src="/js/app.js"></script>